<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to(task.name, "tasks/#{task.id}") %>
      <%= link_to("| edit ", "tasks/#{task.id}/edit") %>
      <%= link_to("| delete", "tasks/#{task.id}", method: "delete", data: { confirm: "Are you sure?" }) %>
    </li>
  <% end %>
</ul>

<%= link_to("Add a task", "tasks/new") %>
